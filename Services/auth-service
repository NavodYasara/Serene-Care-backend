import express from 'express';
import db from '../db/db';

const router = express.Router();

export const userRegister = (
    firstName: string,
    lastName: string,
    email: string,
    password: string,
    mobileNo: string,
    dob: Date,
    gender: string,
    address: string,
    category: string,
    userType: string
): Promise<void> => {

    return new Promise((resolve, reject) => {
        db.query(
            'INSERT INTO user (firstName, LastName, email, password, userType, mobileNo) VALUES (?,?,?,?,?,?)',
            [firstName, lastName, email, password, userType, mobileNo]
        ).then((result: any) => {
            resolve(result);
        }).catch((err: any) => {
            reject(err);
        });
    });
};
